---
import { Image } from "astro:assets";

interface Props {
  image: any;
  header: string;
  description: string;
}

const { description, header, image } = Astro.props;
---

<div class="space-y-1">
  <Image src={image} alt="" class="w-9 h-9" />
  <h3 class="text-xl font-bold">{header}</h3>
  <p class="max-w-96">{description}</p>
</div>
